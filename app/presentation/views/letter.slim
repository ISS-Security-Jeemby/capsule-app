div class="row mt-4"
  - if letter
    div class="col-9"
      - if is_view.empty?
        h4 Edit Letter

        form role="form" action="/capsules/#{capsule['id']}/letters/#{letter['id']}" method='post' id='edit-letter-form'
          div class="form-group"
            label for='title_input' Title Name:
            input type='text' name='title' id='title_input' class="form-control" placeholder="Title is required" value="#{letter['title']}"
          div class="form-group mt-2"
            label for='receiver_input' To:
            input type='text' name='receiver_id' id='receiver_input' class="form-control" placeholder="List the receiver" value="#{letter['receiver_id']}"
          div class="form-group mt-2"
            label for='content_input' Content:
            textarea name='content' id='content_input' class="form-control" placeholder="Write down your messages..."  #{letter['content']}

          button type='submit' class="mr-2 btn btn-primary submit" id='registration-form-submit' value='submit' Save
          a href="/capsules/#{capsule['id']}" class="m-2 ml-2 btn btn-secondary" role="button" Cancel
          button type="button" class="btn btn-danger" onclick="window.location.href='/capsules/#{capsule.id}/letters/#{letters[i]['attributes']['id']}/delete'" Delete

        
      - else
        h4 Received Letter
        p 
          b Title Name:
          '
          | #{letter['title']}
        p 
          b Content:
          | #{letter['content']}

        button type="button" class="btn btn-primary" onclick="window.location.href='/capsules/#{capsule['id']}'" Back To Received Letter

    - if capsule['type'] == 2
      div class="col-3"
        h4 Collaborators 
        - collaborators.each do |collaborator|
          div #{collaborator}
  
